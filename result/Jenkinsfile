pipeline { 
  agent any 
  tools{ 
    nodejs 'nodejs 22.4.0' 
  }
  stages{
    stage("build"){
      when{
        changeset "**/result/**"
      }
      steps{ 
        echo 'Compiling result app'
	dir('result'){
          sh 'npm install'
          sh ' npm ls'
	}
      } 
    } 
    stage("test"){
      when{
        changeset "**/result/**"
      }
      steps{
        echo 'Running Unit Tests on result app'
	dir('result'){
	  sh 'npm install'
          sh 'npm test'
	}
      }
    } 
  }
  post{
    always{
      echo 'Building multibranch pipeline for result is completed..'
    }
  }
}
